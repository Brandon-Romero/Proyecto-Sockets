package view;

import javax.swing.BoxLayout;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextArea;
import javax.swing.plaf.DimensionUIResource;

import java.awt.*;

public class RegisterPanel extends JPanel{

	private static final long serialVersionUID = 1L;
	private JLabel JLClient, JLChat, JLSend;
	private JTextArea JTClients, JTChat;
	
	public RegisterPanel() {
		this.setBackground(Color.LIGHT_GRAY);
		this.setPreferredSize(new Dimension(200,800));
		this.setLayout(new BoxLayout(this, BoxLayout.Y_AXIS));
		this.initComponents();
		this.setVisible(true);
	}
	
	public void initComponents() {
		JLClient = new JLabel();
		this.add(Utilities.text(JLClient, Constants.GAME_FONT, "Clients", Color.BLACK));
		
		JTClients = new JTextArea();
		this.add(Utilities.textArea(JTClients, new Dimension(100,100)));
		
		JLChat = new JLabel();
		this.add(Utilities.text(JLChat, Constants.GAME_FONT, "Chat", Color.BLACK));
		
		JTChat = new JTextArea();
		this.add(Utilities.textArea(JTChat, new Dimension(100,100)));
		
		
		JLSend = new JLabel();
		this.add(Utilities.text(JLChat, Constants.GAME_FONT, "Send Message", Color.BLACK));
	}

}
